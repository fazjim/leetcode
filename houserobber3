/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
public class Solution {
    public int rob(TreeNode root) {
        if(root == null) return 0;
        if(root.left == null && root.right == null) {
            return root.val;
        }
        int leftVal = 0;
        if(root.left == null) leftVal = 0;
        int rightVal = 0;
        if(root.right == null) rightVal = 0;
        
        int robLeft = rob(root.left);
        int robRight = rob(root.right);
        
        int s = robLeft + robRight;
        int t = root.val;
        
        if(root.left != null)
        t += rob(root.left.left) + rob(root.left.right);
        if(root.right != null) 
        t += rob(root.right.left) + rob(root.right.right);
        
        return Math.max(s, t);
    }
}
